<% layout('landing-page') %>

<div class="d-flex" id="wrapper">
  <% include ../partials/landing-page/sidebar %>
    <div id="page-content-wrapper">
      <% include ../partials/landing-page/navbar %>

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="ul-links">
                <ul>
                    <li><a href="/home">Home</a></li> |
                        <li><a href="">Company</a></li>|
                        <li><a href="">Register Company</a></li>
                </ul>
            </div>
        </nav>

        <div class="container-fluid">
            <div class="body-div">
                <h4 class="title">Company Profile</h4>
                <div class="row mainDiv">
                    <div class="col-md-3" style="margin-bottom: 30px;">
                       <img src="/uploads/<%= data.image %>" width="270px" height="270px;"alt="">
                        <h3><%= data.name %></h3>
                        <i class="fa fa-map-marker"></i>  <%= data.city %>, <% data.country %><br>
                        <i class="fa fa-building-o"></i>  <%= data.sector %><br>
                        <i class="fa fa-external-link"></i><a href="<%= data.website %>" target="_blank">  <%= data.website %></a><br><br>
                        
                        <a href="/review/<%= data._id %>" class="btn btn-success btn-block">Rate this company</a><br>
                        <a href="" class="btn btn-info btn-block">View company employee</a><br>

                        <% if(user.company.name != data.name) { %>
                            <a href="/company/register-employee/<%= id %>" class="btn btn-primary btn-block">Register me as an employee</a><br>
                        <% } else { %>
                            <h2>You are an employee</h2>
                        <% } %>

                        <h3>Average Rating</h3>
                        <h5 class="star" data-score="<%= average %>"></h5>
                        <p>Based on <%= data.ratingNumber.length %> review(s)</p>
                    </div>
                    <div class="col-md-9 colDiv">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="count">
                                    <h1><%= data.ratingNumber.length %></h1>
                                    <h2>Ratings</h2>
                                    <h3>Total ratings recieved</h3>
                                </div>
                            </div>
                            <div class="col-md-4">
                                    <div class="count">
                                        <h1><%= data.ratingSum %></h1>
                                        <h2>Total Stars</h2>
                                        <h3>Total stars received</h3>
                                    </div>
                            </div>
                            <div class="col-md-4">
                                <div class="count">
                                    <h1>
                                        <span class="star" data-score="<%= average %>" width="10px" height="10px"></span>
                                    </h1>
                                    <h2>Average Rating (<%= average %>)</h2>
                                    <h3>Based on <%= data.ratingNumber.length %> reviews</h3>
                                </div>
                            </div>
                            <div class="col-md-12 header">
                                <h2>Reviews (<%= data.ratingNumber.length %>)</h2>
                                <div class="linkDiv">
                                    <a href="" class="btn btn-success">Write Review</a>
                                </div>
                            </div>

                            <% if(data.companyRating.length > 0) {%>
                                <% data.companyRating.forEach(function(val){ %>
                                    <div class="row reviewDiv">
                                <div class="col-md-2">
                                    <img src="/uploads/<%= val.companyImage %>" class="center" width="150px" height="150" alt="">
                                </div>
                                <div class="col-md-8" >
                                    <h1>
                                        <a href="#"><%= val.comapnyName %></a> | <%= val.userFullname %>
                                    </h1>
                                    <h2><%= val.userRole %></h2>
                                    <p><%= val.userReview %></p>
                                </div>
                                <div class="col-md-2" >
                                    <h1 style="text-align: center;">Rating</h1>
                                    <span class="star" data-score="<%= val.userRating %>" width="10px" height="10px"></span>
                                </div>
                            </div>
                                <% })%>
                            <% } %>
                                
                            
                                
                           

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


   
