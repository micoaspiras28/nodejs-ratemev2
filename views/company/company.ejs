<% layout('landing-page') %>

<div class="d-flex" id="wrapper">
  <% include ../partials/landing-page/sidebar %>
    <div id="page-content-wrapper">
      <% include ../partials/landing-page/navbar %>

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="ul-links">
                <ul>
                    <li><a href="/home">Home</a></li> |
                        <li><a href="">Company</a></li>|
                        <li><a href="">Register Company</a></li>
                </ul>
            </div>
        </nav>

        <div class="row">
            <div class="col text-center">
                <% if(noErrors){%>
                    <div class="alert alert-success">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">
                            x
                        </a>  
                        <%= success %>
                    </div>
                <% } %>
            </div>
        </div>
                             

        <div class="container">
            <div class="body-div">
                <h4 class="title">Register Company</h4>

                <form method="POST" action="/company/create">
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="inputEmail4">Company Name</label>
                            <span id="errorMsg1"></span>
                            <input type="text" class="form-control" id="name" name="name" placeholder="Company Name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputAddress">Address</label>
                        <span id="errorMsg2"></span>
                        <input type="text" class="form-control" id="address" name="address" placeholder="1234 Main St">
                    </div>
                    <div class="form-group">
                        <label for="inputAddress2">City</label>
                        <span id="errorMsg3"></span>
                        <input type="text" class="form-control" id="city" name="city" placeholder="Manila City">
                    </div>
                    <div class="form-group">
                        <label for="inputAddress2">Country</label>
                        <span id="errorMsg4"></span>
                        <input type="text" class="form-control" id="country" name="country" placeholder="Philippines">
                    </div>
                    <div class="form-group form-row">
                        <div class="col-6">
                            <label for="inputAddress2">Sector</label>
                            <span id="errorMsg5"></span>
                            <input type="text" class="form-control" id="sector" name="sector" placeholder="Sector">
                        </div>
                        <div class="col-6">
                            <label for="inputAddress2">Website</label>
                            <span id="errorMsg6"></span>
                            <input type="text" class="form-control" id="website" name="website" placeholder="Website">
                        </div>
                    </div>
                    <div class="form-group">
                            <label for="">Company Image</label><br>
                            <button class="btn btn-info btn-md" type="button" data-toggle="modal" data-target="#file">Add File</button>
                            <span id="completed"></span>
                            <div class="modal" id="file" tabindex="-1" role="dialog">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button class="close" type="button" id="close" data-dismiss="modal">&times;</button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="row">
                                                <div class="col-12">
                                                <div class="progress" style="height: 20px;">
                                                    <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar"></div>
                                                </div>
                                            </div>
                                            </div><br>
                                            <div class="row">
                                                <div class="col-12"> 
                                                <button class="btn btn-success btn-md upload-btn btn-block" id="upload-btn" type="button">Upload File</button>
                                                <input type="file" class="form-control" name="upload" id="upload-input" style="display: none;">
                                            </div>
                                        </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" id="register" class="form-control btn btn-success" value="Register" name="register">
                    </div>     
                </form>
            </div>
        </div>
    </div>
</div>
   
   
