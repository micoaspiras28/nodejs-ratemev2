<% layout('landing-page') %>

<div class="d-flex" id="wrapper">
  <% include ../partials/landing-page/sidebar %>
    <div id="page-content-wrapper">
      <% include ../partials/landing-page/navbar %>

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="ul-links">
                <ul>
                    <li><a href="/home">Home</a></li> |
                        <li><a href="">Company</a></li>|
                        <li><a href="">Register Company</a></li>
                </ul>
            </div>
        </nav>

        <div class="container">
            <div class="body-div">
                <h4 class="title">Company Employees</h4>

                <table class="table table-hover">
                        <thead>
                          <tr>
                            <th scope="col">Fullname</th>
                            <th scope="col">Position</th>
                            <th></th>
                          </tr>
                        </thead>
                        <tbody>
                          <% if(data.employee.length > 0) {%>
                            <% data.employee.forEach(function(val){ %>
                                <tr>
                                    <td><%= val.employeeFullname %></td>
                                    <td><%= val.employeeRole %></td>
                                    <td><a href="/message/<%= val.employeeId %>" class="btn btn-secondary btn-block">Send Message</a></td>
                                </tr>
                            <% }) %>
                          <% } else { %>
                            <tr>
                                <td>No registered employee yet</td>
                            </tr>
                          <% } %>
                       
                        </tbody>
                      </table>

            </div>
        </div>

    </div>
</div>